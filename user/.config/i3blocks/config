separator_block_width=30

[counter]
full_text=0
_count=1
command=printf '{"full_text":"%s", "_count":%d}\n' $_count $((_count + 1))
format=json

[taskwarrior]
command="scripts/taskwarrior.sh"
interval=5

[keyboard]
command="scripts/keyboard.sh"
interval=1

[volume]
command="scripts/volume.sh"
interval=once
signal=10

[usage]
command="scripts/usage.sh"
interval=1

[networking]
command="scripts/networking.sh"
interval=5

[battery]
command="scripts/battery.sh"
interval=5

[weather]
command="scripts/weather.sh"
interval=once

[time]
command=date '+%Y-%m-%d %H:%M'
interval=5

